<dl class="field-group">
  <dt class="status-ctn">status</dt>
  <dd class="field no-margin"><%= f.radio_button :published, :false %><%= f.label :published, " #{t('publisher.draft')}", :class => 'inline', :value => false %></dd>
  <dd class="field no-margin"><%= f.radio_button :published, :true %><%= f.label :published, " #{t('publisher.published')}", :class => 'inline', :value => true %></dd>
</dl>
<dl class="field-group">
  <dt><%= f.label :published_at %></dt>
  <dd>
    <%= f.text_field :published_at, value: object.published_at.try(:strftime, '%d/%m/%Y'), class: 'datepicker' %>
  </dd>
</dl>
